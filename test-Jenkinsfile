pipeline {
    agent any

    stages {
        stage('docker-build') {
            steps {
                sh "sudo docker images"
            }
        }
        stage('k8s-deploy') {
            steps {
                sh "kubectl get po -A"
            }
        }
        stage('pods-validate') {
            steps {
               sh "kubectl get po -A"
            }
        }
    }
}
